<h1>Sign up</h1>
<%= form_for @user do |f| %>
  <div class="field">
  	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>	
  </div>
  <div class="field">
  	<%= f.label :email, "Email" %>
 	<%= f.text_field :email %>
  </div>
  <div class="field">
  	<%= f.label :password, "Password" %>
	<%= f.text_field :password %>
  </div>
  <div class="field">
  	<%= f.label :password_confirmation, "Password Confirmation" %>
	<%= f.text_field :password_confirmation %>
	
  </div>
  <div class="actions">
	<%= f.submit "Sign up" %>
</div>
<% end %>

